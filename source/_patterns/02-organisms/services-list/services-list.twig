<div class="services-list row-spacer">
	<div class="container">
		<div class="pre-heading">{{ subheading }}</div>
		<h2>{{ heading }}</h2>
		<div class="cards-wrapper d-sm-flex">
			{% for item in items %}
				<div class="service-card {{ class }}">
					<img src="{{ item.image }}"  alt=""/>
					<h3>{{ item.title }}</h3>
					{{ item.content }}
					<a href="{{ item.url }}">{{ item.text }}</a>
				</div>
			{% endfor %}
		</div>
		<div class="more-services text-right d-block d-xl-none"><a href="{{ button_url }}">{{ button_text }}</a></div>
	</div>
</div>
