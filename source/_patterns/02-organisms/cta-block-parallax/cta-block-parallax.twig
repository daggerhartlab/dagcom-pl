<div class="cta-block-parallax row-spacer bg-transparent">
	<div class="container">
		<div class="parallax-bg d-flex align-items-center" style="background-image: url('{{ background_image }}');">
			<div class="text-wrapper text-center text-lg-left">
				<div class="pre-heading">{{ subheading }}</div>
				<h1>{{ heading }}</h1>
				<div class="d-lg-none">
					<img src="{{ background_image }}" alt="{{ alt }}" />
				</div>
				<p>{{ content }}</p>
				<a href="{{ link_url }}" class="btn btn-primary">{{ link_text }}</a>
			</div>
		</div>
	</div>
</div>
