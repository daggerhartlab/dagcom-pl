<div class="cta-block-parallax row-spacer bg-transparent">
	<div class="parallax-bg d-flex align-items-center" style="background-image: url('{{ image_src }}');">
		<div class="container">
			<div class="text-wrapper text-center text-lg-left">
				<div class="pre-heading">{{ subheading }}</div>
				<{{ heading_level|default('h2') }} class="h1">{{ heading }}</{{ heading_level|default('h2') }}>
				<div class="d-lg-none">
					<img src="{{ image_src }}" alt="{{ image_alt }}" />
				</div>
				<div class="text-content">{{ content }}</div>
				{% if link_url and link_text %}
					<a href="{{ link_url }}" class="btn btn-primary">{{ link_text }}</a>
				{% endif %}
			</div>
		</div>
	</div>
</div>
