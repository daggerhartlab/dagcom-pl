<div class="cta-block-simple bg-{{ bg_color }} row-spacer">
	<div class="container">
		<div class="row">
			<div class="col-sm-8">
				<div class="pre-heading">{{ subheading }}</div>
				<h2 class="font-weight-bold">{{ heading }}</h2>
				<div class="text-content">{{ content }}</div>
				{% if link_url and link_text %}
					<a class="btn {{ button_class }}" href="{{ link_url }}">{{ link_text }}</a>
				{% endif %}
			</div>
		</div>
	</div>
</div>
