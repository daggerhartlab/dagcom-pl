<div class="cta-block-media row-spacer">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				{% if images %}
					<div class="row">
					{% for image in images %}
						<div class="image-item col-md-6">
							<div class="image-wrapper">
								<div class="image-title-container">
									<h3 class="image-title">{{ image.title }}</h3>
								</div>
								<div class="image-container">
									<img src="{{ image.image_src }}" alt="{{ image.image_alt }}">
								</div>
							</div>
						</div>
					{% endfor %}
					</div>
				{% endif %}
			</div>
			<div class="col-md-5 offset-md-1">
				<h2>{{ heading }}</h2>
				<div class="text-content">{{ content }}</div>
				<a class="btn {{ button_class }}" href="{{ link_url }}">{{ link_text }}</a>
			</div>
		</div>
	</div>
</div>
