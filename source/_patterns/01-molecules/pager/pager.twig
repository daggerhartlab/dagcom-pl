{% if pages %}
	<div class="pager {{ wrapper_classes }}">
		<ul class="bg-white m-0 text-center inline-list">
			{% if prev %}
				<li class="{{ prev.class }}"><a href="{{ prev.link }}"><span class="icon-arrow-left-circle"><span class="sr-only">Previous</span></span></a></li>
			{% endif %}
			{% for item in pages %}
				<li class="{{ item.class }}"><a class="{{ item.current ? 'active' : "" }}" href="{{ item.link }}">{{ item.title }}</a></li>
			{% endfor %}
			{% if next %}
				<li class="{{ next.class }}"><a href="{{ next.link }}"><span class="icon-arrow-right-circle"><span class="sr-only">Next</span></span></a></li>
			{% endif %}
		</ul>
	</div>
{% endif %}
