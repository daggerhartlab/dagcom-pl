{% for color, classes in colors %}
	<div class="alert alert-{{ color }} {{ classes }} alert-dismissible fade show " role="alert">
		A dismissible {{ color }} alert with <a href="#" class="alert-link">an example link</a>.
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
{% endfor %}
